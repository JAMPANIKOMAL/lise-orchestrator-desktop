{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LISE Orchestrator Desktop",
  "version": "1.0.0",
  "identifier": "com.komal.lise-orchestrator-desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LISE Orchestrator Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../orchestrator/dist/lise-orchestrator.exe"
    ]
  }
}
